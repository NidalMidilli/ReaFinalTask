@using EntityLayer
@model EntityLayer.Comment

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Comment Information
                        </h4>
                        <form asp-action="Add" asp-controller="Comment" method="post">
                            <div class="mb-3 mt-5">
                                <label for="commentText" class="form-label">Comment Text</label>
                                <input type="text" class="form-control" name="commentText">
                                <span asp-validation-for="commentText"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">ADD COMMENT</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
    <!-- partial -->
</div>
<!-- main-panel ends -->
